<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_datos_equipo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="c.baloncesto.datos_equipo"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.09">


        <ImageView

            android:id="@+id/imageViewLogo"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNombreEquipo"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="0.25"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDireccion"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_weight="0.25"
                android:lineSpacingExtra="8sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTelefono"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:layout_weight="0.25"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:elevation="0dp">

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_facebook"
            android:id="@+id/buttonFacebook"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />
        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_instagram"
            android:id="@+id/buttonInstagram"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_web"
            android:id="@+id/buttonNavegador"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_calendario"
            android:id="@+id/imageButton8"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_llamar"
            android:id="@+id/buttonLlamada"
            android:background="@color/colorAccent"
            android:minHeight="0dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:elevation="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/icono_llegar"
            android:id="@+id/buttonLlegar"
            android:background="@color/colorAccent"
            android:minHeight="0dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_height="50dp" />
    </LinearLayout>

    <ListView
        android:divider="@color/FondoListView"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:id="@+id/list_view_categoria"
        android:layout_gravity="bottom"
        android:layout_weight="4.69"
        />

</LinearLayout>
